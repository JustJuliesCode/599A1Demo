pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install pandas'
            }
        }

        stage('Generate Dashboard') {
            steps {
                sh 'python generate_dashboard.py'
            }
        }

        stage('Archive Dashboard') {
            steps {
                archiveArtifacts artifacts: 'output/dashboard.html', fingerprint: true
            }
        }
    }
}
